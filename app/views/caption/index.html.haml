%div{class: 'col-xs-4'}
  %form{method: 'POST', id: 'uploader-form', enctype: 'multipart/form-data'}
    %label{class: 'btn btn-primary btn-file btn-block'}
      Upload Image
      %input{type: 'file', style: 'display:none', id: 'btn-image-upload'}
%div{class: 'col-xs-8'}
  %div{class: 'progress', style: 'display:none'}
    %div{class: 'progress-bar progress-bar-striped active', id: 'upload-progress-bar'}

%div{class: 'row'}
%hr
%div{class: 'col-xs-12'}
  %pre{id: 'debug-output', style: 'display:none'}
%hr
%div{class: 'col-xs-6 text-center'}
  %img{id: 'upload-preview'}
%div{class: 'col-xs-6'}
  %div{id: 'caption-result'}

:javascript
  uploader.attach()